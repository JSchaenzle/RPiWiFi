# BrewMon
# Network Manager (RPiWiFi) Version: <%=settings[:rpi_wifi_version]%>
# Template for /etc/wpa_supplicant/wpa_supplicant.conf

ctrl_interface=DIR=/var/run/wpa_supplicant GROUP=netdev
update_config=1

network={
ssid="<%=settings[:infstr][:ssid]%>"
<%=if settings[:infstr][:key_mgmt] != "NONE"%>
psk="<%=settings[:infstr][:passkey]%>"
<%end%>

# Protocol type can be: RSN (for WP2) and WPA (for WPA1)
proto=WPA

# Key management type can be: WPA-PSK or WPA-EAP (Pre-Shared or Enterprise)
key_mgmt=<%=settings[:infstr][:key_mgmt]%>

# Pairwise can be CCMP or TKIP (for WPA2 or WPA1)
pairwise=TKIP

#Authorization option should be OPEN for both WPA1/WPA2 (in less commonly used are SHARED and LEAP)
auth_alg=OPEN
}
